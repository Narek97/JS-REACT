<h1>Course</h1>

{{#if courses.length}}
{{!-- #each hbs um cikla frum --}}
{{#each courses}}
<div class="row">
  <div class="col s6 offset-s3">
    <div class="card">
      <div class="card-image">
        <img src="{{img}}" alt="{{title}}">
      </div>
      <div class="card-content">
        <span class="card-title">{{title}}</span>
        <p class="price">{{price}}</p>
      </div>
      <div class="card-action actions">
        {{!-- target="_blank" vor nor ejum bachi --}}
        <a href="/courses/{{id}}" target="_blank">Open course</a>
        {{!-- stugum enq usery login exata te che nor knopkekqy cuych tanq --}}
        {{!-- @root.isAuth ete menak isAuth grenq inqy  each cikluma stugelu isk sench sesiayum--}}
        {{#if @root.isAuth}}
        <a href="/courses/{{id}}/edit?allow=true">Edit</a>
        <form action="/card/add" method="POST">
          {{!-- _csrf sesian pashtpanelu hamar --}}
          <input type="hidden" name="_csrf" value="{{@root.csrf}}">
          {{!-- ............................... --}}
          <input type="hidden" name="id" value="{{id}}">
          <button type="submit" class="btn btn-primary">Buy</button>
        </form>
        {{/if}}
      </div>
    </div>
  </div>
</div>
{{/each}}
{{else}}
<p>No courses yet</p>
{{/if}}