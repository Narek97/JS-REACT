<div class="auth">
    <div class="row">
        <div class="col s12">
            <ul class="tabs">
                <li class="tab col s6"><a class="active" href="#login">Login</a></li>
                <li class="tab col s6"><a href="#registr">Registration</a></li>
            </ul>
        </div>
        <div id="login" class="col s6 offset-s3">
           {{!-- stugum enq ete error ka chuych enq talis --}}
           {{#if loginError}}
                <p class="alert">{{loginError}}</p>
            {{/if}}
            
            <h1>Enter the store</h1>
            <form action="/auth/login" method="POST">
                <div class="input-field">
                    <input id="email" name="email" type="email" class="validate" required>
                    <label for="email">Email</label>
                    <span class="helper-text" data-error="Add email"></span>
                </div>

                <div class="input-field">
                    <input id="password" name="password" type="password" class="validate" required>
                    <label for="password">Password</label>
                    <span class="helper-text" data-error="Add password"></span>
                </div>

                {{!-- _csrf sesian pashtpanelu hamar --}}
                <input type="hidden" name="_csrf" value="{{csrf}}">
                {{!-- ............................... --}}
                {{!-- morachat paroly et berelu hamar --}}
                <p><a href="/auth/reset">Forget password?</a></p>
                <button class='btn btn-primary' type="submit">Login</button>
            </form>
        </div>
        <div id="registr" class="col s6 offset-s3">
            {{#if registrError}}
                <p class="alert">{{registrError}}</p>
            {{/if}}
            <h2>Create an account</h2>
            <form action="/auth/register" method="POST">
                <div class="input-field">
                    <input id="remail" name="email" type="email" class="validate" required>
                    <label for="remail">Email</label>
                    <span class="helper-text" data-error="Add email"></span>
                </div>

                 <div class="input-field">
                    <input id="name" name="name" type="text" class="validate" required>
                    <label for="name">Name</label>
                    <span class="helper-text" data-error="Add name"></span>
                </div>
                <div class="input-field">
                    <input id="rpassword" name="password" type="password" class="validate" required>
                    <label for="rpassword">Password</label>
                    <span class="helper-text" data-error="Add password"></span>
                </div>
                <div class="input-field">
                    <input id="confirm" name="confirm" type="password" class="validate" required>
                    <label for="confirm">Confirm password</label>
                    <span class="helper-text" data-error="Add password"></span>
                </div>
                 {{!-- _csrf sesian pashtpanelu hamar --}}
                <input type="hidden" name="_csrf" value="{{csrf}}">
                {{!-- ............................... --}}
                <button class='btn btn-primary' type="submit">Registration</button>
            </form>
        </div>
    </div>
</div>